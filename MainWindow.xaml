<Window x:Class="TIkTokStats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TIkTokStats"
        mc:Ignorable="d"
        Title="Tik Tok Stats" Height="400" Width="250" ResizeMode="NoResize"
        Topmost="False" WindowState="Normal" Icon="./Resources/icon.jpg">
    <Grid Background="Black">
        <MediaElement x:Name="Background" Source="./Resources/background.gif" 
                      LoadedBehavior="Play" UnloadedBehavior="Manual" Margin="54,31,54,163" 
                      MediaEnded="Background_MediaEnded"/>
        <Button Height="54"  Width="184" Click="Button_Click" FontSize="20" 
                FontFamily="Arial Black" Foreground="White" Background="{x:Null}" 
                BorderBrush="{x:Null}" Margin="0,226,0,0" 
                HorizontalAlignment="Center" VerticalAlignment="Top">
            Оновити дані
        </Button>
        <TextBlock x:Name="Progress" Margin="0,285,0,0" Foreground="White" FontSize="45" 
                   HorizontalAlignment="Center" VerticalAlignment="Top"></TextBlock>
    </Grid>
</Window>
